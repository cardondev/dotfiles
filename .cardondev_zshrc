# Quick git commit with message
gcm() {
    if [ -z "$1" ]; then
        echo "${RED}โ Please provide a commit message${RESET}"
        return 1
    fi
    echo "${GREEN}๐ Committing with message: ${YELLOW}$1${RESET}"
    git add -A && git commit -m "$1"
    echo "${GREEN}โ Committed successfully!${RESET}"
}

# Search history with fzf
h() {
    echo "${LAVENDER}๐ Searching history...${RESET}"
    print -z $( ([ -n "$ZSH_NAME" ] && fc -l 1 || history) | fzf +s --tac | sed -E 's/ *[0-9]*\*? *//' | sed -E 's/\\/\\\\/g')
}

# Colorful directory tree
tree() {
    echo "${GREEN}๐ฒ Directory tree:${RESET}"
    command tree -C "$@" | less -R
}

