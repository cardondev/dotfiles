# Colorful directory creation and navigation
mkcd() {
    echo "${GREEN}๐ Creating and entering: ${YELLOW}$1${RESET}"
    mkdir -p "$1" && cd "$1"
}

# Extract any archive with style
extract() {
    if [ -f "$1" ]; then
        echo "${BLUE}๐ฆ Extracting: ${YELLOW}$1${RESET}"
        case "$1" in
            *.tar.bz2)   tar xjf "$1"     ;;
            *.tar.gz)    tar xzf "$1"     ;;
            *.bz2)       bunzip2 "$1"     ;;
            *.rar)       unrar e "$1"     ;;
            *.gz)        gunzip "$1"      ;;
            *.tar)       tar xf "$1"      ;;
            *.tbz2)      tar xjf "$1"     ;;
            *.tgz)       tar xzf "$1"     ;;
            *.zip)       unzip "$1"       ;;
            *.Z)         uncompress "$1"  ;;
            *.7z)        7z x "$1"        ;;
            *)           echo "${RED}โ Unknown archive format${RESET}" ;;
        esac
        echo "${GREEN}โ Extraction complete!${RESET}"
    else
        echo "${RED}โ '$1' is not a valid file${RESET}"
    fi
}

# Weather with style
weather() {
    local location="${1:-New York}"
    echo "${SKY}๐ค๏ธ  Weather for ${YELLOW}${location}:${RESET}"
    curl -s "wttr.in/${location}?format=3"
}

